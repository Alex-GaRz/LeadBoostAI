# Memory Service - Configuración de Entorno
# FASE 6.1

# Identificación del Servicio
SERVICE_NAME=microservice_memory
SERVICE_VERSION=6.1.0
HOST=0.0.0.0
PORT=8006

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=campaign_memories

# OpenAI Configuration (Requerido para embeddings de producción)
OPENAI_API_KEY=your-openai-api-key-here

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# Fallback Configuration
USE_LOCAL_EMBEDDINGS=false
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Retrieval Configuration
DEFAULT_RETRIEVAL_LIMIT=3
MAX_RETRIEVAL_LIMIT=10

# Security
ENFORCE_TENANT_ISOLATION=true

# Environment (development, staging, production)
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
